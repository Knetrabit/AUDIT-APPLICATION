@model List<PendingCashupDetail>

@{
    ViewData["Title"] = "Pending CashUp";
}

<h5 class="mb-4 text-center text-primary">@ViewData["Title"]</h5>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- ✅ Filter Section -->
<div class="w-100 mb-2 shadow-sm bg-light border rounded filter-container p-3" style="background-color:lightgrey">
    <form method="get" asp-controller="PendingCashup" asp-action="Index">
        <div class="row gx-2 gy-1 align-items-end">

            <div class="col-md-3">
                <label for="operationDay" class="form-label small mb-1">Operation Day</label>
                <input type="date" id="operationDay" name="operationDay" class="form-control form-control-sm"
                       value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
            </div>

            <div class="col-md-3">
                <label for="shift" class="form-label small mb-1">Shift</label>
                <select id="shift" name="shift" class="form-select form-select-sm">
                    <option value="">-- Select --</option>
                    <option value="A">Shift A</option>
                    <option value="B">Shift B</option>
                    <option value="C">Shift C</option>
                </select>
            </div>

            <div class="col-md-3">
                <label for="userId" class="form-label small mb-1">User ID</label>
                <input type="text" id="userId" name="userId" class="form-control form-control-sm" />
            </div>

            <div class="col-md-2">
                <button type="submit" class="btn btn-sm btn-primary w-100">View</button>
            </div>

        </div>
    </form>
</div>


<!-- ✅ Grid Section -->
<div class="table-responsive shadow-sm mt-3" style="max-height: 540px; overflow-y: auto; margin-bottom: 20px;">
    <table class="table table-bordered table-hover table-striped table-sm small">
        <thead class="table-dark text-center sticky-top" style="top: 0; z-index: 10;">
            <tr>
                <th>User Name</th>
                <th>Bag No</th>
                <th>Shift</th>
                <th>Float Amount</th>
                <th>Operation Day</th>
                <th>Float DateTime</th>
                <th>User ID</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.UserName</td>
                        <td>@item.BagNo</td>
                        <td>@item.Shift</td>
                        <td>₹ @item.FloatAmount.ToString("N2")</td>
                        <td>@item.OperationDay.ToString("dd-MMM-yyyy")</td>
                        <td>@item.FloatDateTime.ToString("dd-MMM-yyyy HH:mm:ss")</td>
                        <td>@item.UserID</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="7" class="text-center">No records found</td></tr>
            }
        </tbody>
    </table>
</div>
