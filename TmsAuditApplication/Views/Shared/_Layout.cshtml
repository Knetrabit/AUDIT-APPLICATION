<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VrsAuditApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VrsAuditApplication.styles.css" asp-append-version="true" />
    <!-- Add Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <!-- Top Navbar -->
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-warning">LONI TOLL PLAZA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav"
                        aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="topNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a href="#" class="nav-link text-white fw-bold" onclick="showSidebar('validationSidebar')">Validation</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link text-white fw-bold" onclick="showSidebar('cashUpSidebar')">CashUp</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link text-white fw-bold" onclick="showSidebar('adminSidebar')">Admin</a>
                        </li>
                    </ul>

                    @* <p class="text-white fw-bold mx-auto">Loni Toll Plaza</p> *@

                    <div class="d-flex ms-auto">
                        @{
                            var user = Context.Session.GetString("User");
                        }
                        @if (!string.IsNullOrEmpty(user))
                        {
                            <form asp-controller="Home" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-outline-danger text-white">(@user) Logout</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Login</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar for Validation -->
    <div id="validationSidebar" class="sidebar colorful-sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeSidebar('validationSidebar')">&times;</a>
        <a asp-controller="FastTag" asp-action="Index"><i class="bi bi-speedometer2"></i> FastTag</a>
        <a asp-controller="NonFastTag" asp-action="Index"><i class="bi bi-slash-circle"></i> NonFastTag</a>
    </div>

    <!-- Sidebar for CashUp -->
    <div id="cashUpSidebar" class="sidebar colorful-sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeSidebar('cashUpSidebar')">&times;</a>
        <a asp-controller="FloatDeclaration" asp-action="Index"><i class="bi bi-hourglass-split"></i> Float Declaration</a>
        <a asp-controller="PendingCashup" asp-action="Index"><i class="bi bi-pencil-square"></i> Pending Cashup</a>
        <a asp-controller="CashupDeclaration" asp-action="Index"><i class="bi bi-cash-coin"></i> Cashup Declaration</a>
        <a asp-controller="CashupReport" asp-action="Index"><i class="bi bi-cash-coin"></i> Cashup Report</a>
    </div>

    <!-- Sidebar for Admin -->
    <div id="adminSidebar" class="sidebar colorful-sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeSidebar('adminSidebar')">&times;</a>

        <a asp-controller="UserCreation" asp-action="Index">
            <i class="bi bi-person-plus-fill"></i> User Creation
        </a>

        <a asp-controller="UserRights" asp-action="Index">
            <i class="bi bi-key-fill"></i> User Rights
        </a>

        <a asp-controller="MasterFare" asp-action="Index">
            <i class="bi bi-cash-stack"></i> Master Fare
        </a>

        <a asp-controller="VehicleMaster" asp-action="Index">
            <i class="bi bi-truck-front-fill"></i> Vehicle Master
        </a>

        <a asp-controller="LaneMaster" asp-action="Index">
            <i class="bi bi-layers-fill"></i> Lane Master
        </a>

        <a asp-controller="EventLogReport" asp-action="Index">
            <i class="bi bi-journal-text"></i> Event Log Report
        </a>

        <a asp-controller="ChangePassword" asp-action="Index">
            <i class="bi bi-shield-lock-fill"></i> Change Password
        </a>
    </div>

    

    <!-- Main Content -->
    <div class="container-fluid px-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark mt-5">
        <div class="container-fluid text-center text-white">
            &copy; 2025 - AUDIT
        </div>
    </footer>

    <style>
        
        .closebtn {
            position: absolute;
            font-size: 18px;       /* smaller size */
            width: 24px;           /* small clickable area */
            height: 24px;
            line-height: 22px;     /* vertical center for the × */
            text-align: center;
            border-radius: 50%;    /* circle shape */
            background-color: #ccc; /* optional */
            color: #333;           /* icon color */
            text-decoration: none;
            display: inline-block; /* make it shrink to size */
            padding: 0; 
        }

        /* Colorful Sidebar */
        .colorful-sidebar {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1050;
            top: 0;
            left: 0;
            background: linear-gradient(180deg, #333333, #cccccc);
            overflow-x: hidden;
            transition: 0.3s;
            padding-top: 60px;
            box-shadow: 3px 0px 8px rgba(0,0,0,0.3);
        }

            .colorful-sidebar a {
                padding: 12px 25px;
                text-decoration: none;
                font-size: 18px;
                display: flex;
                align-items: center;
                color: #fff;
                transition: 0.2s;
                border-left: 4px solid transparent;
            }

                .colorful-sidebar a i {
                    margin-right: 12px;
                    font-size: 20px;
                }

                .colorful-sidebar a:hover {
                    background-color: rgba(255,255,255,0.2);
                    border-left: 4px solid #fff;
                }

            .colorful-sidebar .closebtn {
                position: absolute;
                top: 10px;
                right: 20px;
                font-size: 36px;
                color: white;
            }

        /* Style for Close Button */
        .sidebar .closebtn {
            position: absolute;
            top: 15px;
            right: 15px;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.4);
            color: red;
            font-size: 22px;
            font-weight: bold;
            /* Center the X */
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            /* Hover effect */
            .sidebar .closebtn:hover {
                background-color: #ff4d4d; /* red background */
                color: #fff; /* white X */
            }


    </style>

    <script>
        function showSidebar(id) {
            // Close all sidebars first
            document.querySelectorAll(".sidebar").forEach(function (sidebar) {
                sidebar.style.width = "0";
            });

            // Open the requested sidebar
            document.getElementById(id).style.width = "250px"; // or whatever width you use
        }

        function closeSidebar(id) {
            document.getElementById(id).style.width = "0";
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
